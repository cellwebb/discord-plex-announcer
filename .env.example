# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
CHANNEL_ID=your_discord_channel_id_here

# Plex Server Configuration
PLEX_URL=http://localhost:32400
PLEX_TOKEN=your_plex_token_here

# Library Configuration
MOVIE_LIBRARY=Movies
TV_LIBRARY=TV Shows

# Notification Settings
NOTIFY_MOVIES=true
NOTIFY_NEW_SHOWS=true
NOTIFY_TV=true
NOTIFY_RECENT_EPISODES=true
RECENT_EPISODE_DAYS=30  # Days to consider an episode as "recent"

# Check Interval Settings
CHECK_INTERVAL=3600  # Default: 3600 seconds (1 hour)

# Data Storage
DATA_FILE=processed_media.json

# Plex Connection Settings
PLEX_CONNECT_RETRY=3  # Number of retries for Plex connection

# Logging Settings
LOGGING_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
